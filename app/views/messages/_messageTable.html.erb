<div class="table-responsive msg-bg">
    <table class="table table-hover">
      
      <thead class="thead-dark">
        <tr>
          <th>Written By</th>
          <th>Title</th>
          <th>Date/Time</th>
          <th colspan="4"></th>
        </tr>
      </thead>

      <tbody>
        <% @messages.each do |message| %>
          <tr>
            <tr  class="table-row" onclick=location.href='<%= message_path(message) %>'>
              <td><%= message.user.name %></td>
              <td><%= message.title %></td>
              <td><%= message.created_at.to_date.to_formatted_s(:long_ordinal) %></td>
            </tr>
          </tr>
        <% end %>
      </tbody>

    </table>
  </div>